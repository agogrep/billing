<?xml version="1.0"?>
<script>

    <masterfield>lid</masterfield>

    <part>
      <name>main</name>
      <section>
        <parentselector>.//*[@id="main"]</parentselector>
        <selector>.//*[@id="form"]</selector>
        <repeat>0</repeat>
      </section>
      <sql>
        <readquery>SELECT * FROM labels WHERE lid LIKE {lid}</readquery>
        <writequery>
        </writequery>
        <writegenerator>
          <scriptname>write</scriptname>
          <param>
            <table>labels</table>
            <id_name>lid</id_name>
          </param>
        </writegenerator>
        <argument>
          <lid>
            <type>int</type>
            <long></long>
            <default></default>
          </lid>
          <lname>
            <type>str</type>
            <long></long>
            <default></default>
          </lname>
          <descr>
            <type>str</type>
            <long></long>
            <default></default>
          </descr>
        </argument>
      </sql>
      <layout>
        <element>
          <selector>.//*[@name="lid"]</selector>
          <attribute></attribute>
          <fild>lid</fild>
        </element>
        <element>
          <selector>.//*[@name="lname"]</selector>
          <attribute>value</attribute>
          <fild>lname</fild>
        </element>
        <element>
          <selector>.//*[@name="descr"]</selector>
          <attribute>value</attribute>
          <fild>descr</fild>
        </element>
      </layout>
    </part>
    <part></part>
  </script>
