<?xml version="1.0"?>
<script>
    <masterfield>brid</masterfield>
    <part>
      <name>main</name>
      <section>
        <parentselector>.//*[@id="main"]</parentselector>
        <selector>.//*[@id="form"]</selector>
        <repeat>0</repeat>
      </section>
      <sql>
        <readquery>SELECT b.brid,b.brdate,b.script,b.rsid,b.rparam,
        b.source,s.aname sourcename,b.dest,d.aname destname,r.sysname,
        b.sum,b.type,b.priority,b.rpid,b.schedule FROM budgetrules b
        LEFT OUTER JOIN accounts s ON s.aid = b.source
        LEFT OUTER JOIN accounts d ON d.aid = b.dest
        LEFT OUTER JOIN reportscripts r ON r.rsid = b.rsid
        WHERE brid = {brid}</readquery>
        <writequery></writequery>
        <writegenerator>
          <scriptname>write</scriptname>
          <param>
            <table>budgetrules</table>
            <id_name>brid</id_name>
          </param>
        </writegenerator>
        <argument>
          <brid>
            <type>int</type>
            <long></long>
            <default></default>
          </brid>
          <brdate>
            <type>str</type>
            <long></long>
            <default></default>
          </brdate>
          <script>
            <type>str</type>
            <long></long>
            <default></default>
          </script>
          <rsid>
            <type>int</type>
            <long></long>
            <default></default>
          </rsid>
          <rparam>
            <type>str</type>
            <long></long>
            <default></default>
          </rparam>
          <source>
            <type>int</type>
            <long></long>
            <default></default>
          </source>
          <sourcename>
            <type>str</type>
            <long></long>
            <default></default>
          </sourcename>
          <dest>
            <type>int</type>
            <long></long>
            <default></default>
          </dest>
          <destname>
            <type>str</type>
            <long></long>
            <default></default>
          </destname>
          <sum>
            <type>int</type>
            <long></long>
            <default></default>
          </sum>
          <type>
            <type>int</type>
            <long></long>
            <default></default>
          </type>
          <priority>
            <type>int</type>
            <long></long>
            <default></default>
          </priority>
          <rpid>
            <type>int</type>
            <long></long>
            <default></default>
          </rpid>
          <schedule>
            <type>str</type>
            <long></long>
            <default></default>
          </schedule>
        </argument>
      </sql>
      <layout>
          <element>
            <selector>.//*[@name="brid"]</selector>
            <attribute></attribute>
            <fild>brid</fild>
          </element>
          <element>
            <selector>.//*[@name="brdate"]</selector>
            <attribute>value</attribute>
            <fild>brdate</fild>
          </element>
          <element>
            <selector>.//*[@name="schedule"]</selector>
            <attribute></attribute>
            <fild>schedule</fild>
          </element>
          <element>
            <selector>.//*[@name="script"]</selector>
            <attribute></attribute>
            <fild>script</fild>
          </element>
          <element>
            <selector>.//*[@name="rsid"]</selector>
            <attribute></attribute>
            <fild>rsid</fild>
          </element>
          <element>
            <selector>.//*[@name="sysname"]</selector>
            <attribute></attribute>
            <fild>sysname</fild>
          </element>
          <element>
            <selector>.//*[@name="rparam"]</selector>
            <attribute></attribute>
            <fild>rparam</fild>
          </element>
          <element>
            <selector>.//*[@name="source"]</selector>
            <attribute></attribute>
            <fild>source</fild>
          </element>
          <element>
            <selector>.//*[@name="sourcename"]</selector>
            <attribute></attribute>
            <fild>sourcename</fild>
          </element>
          <element>
            <selector>.//*[@name="dest"]</selector>
            <attribute></attribute>
            <fild>dest</fild>
          </element>
          <element>
            <selector>.//*[@name="destname"]</selector>
            <attribute></attribute>
            <fild>destname</fild>
          </element>
          <element>
            <selector>.//*[@name="sum"]</selector>
            <attribute>value</attribute>
            <fild>sum</fild>
          </element>
          <element>
            <selector>.//*[@name="type"]</selector>
            <attribute>value</attribute>
            <fild>type</fild>
          </element>
          <element>
            <selector>.//*[@name="priority"]</selector>
            <attribute>value</attribute>
            <fild>priority</fild>
          </element>
          <element>
            <selector>.//*[@name="rpid"]</selector>
            <attribute>value</attribute>
            <fild>rpid</fild>
          </element>
          <element>
            <selector>.//*[@name="schedule"]</selector>
            <attribute></attribute>
            <fild>schedule</fild>
          </element>
      </layout>
    </part>
    <part>
      <name>events</name>
      <section>
        <parentselector>.//*[@id="events"]</parentselector>
        <selector>.//*[@name="row"]</selector>
        <repeat>0</repeat>
      </section>
      <sql>
        <readquery>SELECT eid,edate,priority FROM events
        WHERE relclass = 'budgetrules' AND relid = {brid} AND edate > CURDATE()
        ORDER BY edate Limit 8</readquery>
        <writequery></writequery>
        <argument>
          <eid>
            <type>int</type>
            <long></long>
            <default></default>
          </eid>
          <edate>
            <type>str</type>
            <long></long>
            <default></default>
          </edate>
          <priority>
            <type>int</type>
            <long></long>
            <default></default>
          </priority>
        </argument>
      </sql>
      <layout>
          <element>
            <selector>.//*[@name="eid"]</selector>
            <attribute></attribute>
            <fild>eid</fild>
          </element>
          <element>
            <selector>.//*[@name="edate"]</selector>
            <attribute></attribute>
            <fild>edate</fild>
          </element>
          <element>
            <selector>.//*[@name="priority"]</selector>
            <attribute></attribute>
            <fild>priority</fild>
          </element>
      </layout>
    </part>



  </script>
